@{
    ViewBag.Title = "Home Page";
    var ListaEventos = ViewBag.ListaEventos;

}
@Styles.Render("~/Content/CSS/home.css")

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="10000">
    <ol class="carousel-indicators" style="margin-bottom:9%;">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active" style="margin-top:60px;">
            <img class="img-fluid imagen" src="~/Content/Img/ArtistasCarrusel/trenza.jpg" alt="First slide">

        </div>
        <div class="carousel-item" style="margin-top:60px;">
            <img class="img-fluid imagen" src="~/Content/Img/ArtistasCarrusel/ba.jpg" alt="Second slide">
        </div>
        <div class="carousel-item" style="margin-top:60px;">
            <img class="img-fluid imagen" src="~/Content/Img/ArtistasCarrusel/paty.jpg" alt="Third slide">
        </div>
        <div class="carousel-item" style="margin-top:60px;">
            <img class="img-fluid imagen" src="~/Content/Img/ArtistasCarrusel/haash.jpg" alt="Third slide">
        </div>
        <div class="carousel-item" style="margin-top:60px;">
            <img class="img-fluid imagen" src="~/Content/Img/ArtistasCarrusel/jd.jpg" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                <embed src="~/Content/Img/jd.mp3" autostart="true" loop="true" width="0" height="0" />
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<p style="font-family: 'Nanum Gothic', sans-serif;
font-family: 'Kodchasan', sans-serif;
font-family: 'Pacifico', cursive;
 color: #beb6b6; font-size:55px; margin-left:25%; margin-top:50px;">Lista de Eventos Proximos...</p>
<!--#26292A-->
<div class="table-responsive" style="height:500px;  padding-left:50px; margin-top:50px;">
    <table>
        <thead style="background:black; color: antiquewhite; font-family: 'Poppins', sans-serif;">
            <tr>
                <th style="padding-left:100px;">Fecha</th>
                <th style="padding-left:100px;">Artista</th>
                <th style="padding-left:100px;">Lugar</th>
                <th style="padding-left:100px;">Dirección</th>
                <th style="padding-left:100px;">Boletos</th>
                <th style="padding-left:100px; padding-right:100px;">Acciones</th>
            </tr>
        </thead>
        @foreach (var p in ListaEventos)
        {
            <tbody class="tipoletra" style="font-family: 'Nanum Gothic', sans-serif;
font-family: 'Kodchasan', sans-serif; color:white;">
                <tr style="background: url('../../Content/Img/ArtistasCarrusel/patycantu.gif'); width:100%; ">
                    <td><p style="font-size:29px; margin-left:100px; width:100px;">@p.Fecha</p></td>
                    <td><p style="margin-left:100px; width:100px;">@p.Artista </p></td>
                    <td><p style="margin-left:100px; width:100px;">@p.Lugar</p></td>
                    <td><p style="margin-left:100px; width:100px;">@p.Direccion</p></td>
                    <td><a style="margin-left:100px; width:100px; color:white;" href="https://www.ticketmaster.com.mx/" class="card-link">Tickets</a></td>
                    <td>
                        <a style="margin-left:100px; width:100px; color:white;">@Html.ActionLink("Actualizar", "Actualizar", new { Id = p.Id })</a>

                        <a>@Html.ActionLink("Eliminar", "Eliminar", new { Id = p.Id })</a>
                    </td>
                </tr>
            </tbody>
        }
    </table>
</div>

<br />
<br />

<a href="@Url.Action("Agregar")" style="font-family: 'Nanum Gothic', sans-serif;
font-family: 'Kodchasan', sans-serif; color:white; text-decoration:none; color: white; margin-left:15%;"><i class="fas fa-calendar" style="font-size:25px; color: white; margin-right:5px;"></i>Agregar Nuevo Evento</a>


